<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TRAFA" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#212A3E</item>
        <item name="colorPrimaryVariant">#070707</item>
        <item name="colorOnPrimary">#8F8E8E</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#070707</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#050505</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TRAFA.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TRAFA.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TRAFA.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>